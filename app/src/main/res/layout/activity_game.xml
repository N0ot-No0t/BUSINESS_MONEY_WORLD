<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.patateco.qc.ca.businessmoneyworld.GameActivity">

    <ImageButton
        android:id="@+id/btnSettings"
        android:layout_width="34dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/btnNews"
        android:layout_marginTop="7dp"
        android:backgroundTint="@android:color/transparent"
        android:scaleType="fitXY"
        android:translationZ="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/settings" />

    <ImageView
        android:id="@+id/imgCarte"
        android:layout_width="556dp"
        android:layout_height="362dp"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/btnNext"
        android:background="@drawable/interface_carte"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />


    <ImageButton
        android:id="@+id/btnPersonnage"
        android:layout_width="39dp"
        android:layout_height="38dp"
        android:layout_above="@+id/btnAction"
        android:layout_alignStart="@+id/btnPays"
        android:layout_marginBottom="7dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:translationZ="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/imgCarte"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.135"
        app:srcCompat="@drawable/avatar" />

    <ImageButton
        android:id="@+id/btnNews"
        android:layout_width="35dp"
        android:layout_height="39dp"
        android:layout_above="@+id/btnPays"
        android:layout_alignParentEnd="true"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:translationZ="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.396"
        app:srcCompat="@drawable/news" />

    <ImageButton
        android:id="@+id/btnAction"
        android:layout_width="33dp"
        android:layout_height="35dp"
        android:layout_above="@+id/btnNews"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="15dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:translationZ="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.998"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.619"
        app:srcCompat="@drawable/action" />

    <ImageButton
        android:id="@+id/btnPays"
        android:layout_width="30dp"
        android:layout_height="31dp"
        android:layout_above="@+id/btnNext"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="47dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:translationZ="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.992"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.819"
        app:srcCompat="@drawable/pays" />

    <ImageButton
        android:id="@+id/btnNext"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:translationZ="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.998"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/next" />

    <TextView
        android:id="@+id/txtTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imgCarte"
        android:layout_marginStart="176dp"
        android:layout_marginTop="50dp"
        android:layout_toEndOf="@+id/btnPersonnage"
        android:text="BMW"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.038"
        app:layout_constraintStart_toStartOf="@+id/imgCarte"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

</RelativeLayout>